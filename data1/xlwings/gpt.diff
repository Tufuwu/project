name: Python CI

on:
  push:
    branches:
      - main
  pull_request:
    branches:
      - main

jobs:
  build:
    runs-on: ubuntu-latest
    
    strategy:
      matrix:
        python-version: [2.7, 3.2, 3.3, 3.4, 3.5, 3.6, 3.7]
        include:
          - python-version: 2.7
            dist: trusty
          - python-version: 3.2
            dist: trusty
          - python-version: 3.3
            dist: trusty
          - python-version: 3.4
            dist: xenial
          - python-version: 3.5
            dist: xenial
          - python-version: 3.6
            dist: xenial
          - python-version: 3.7
            dist: xenial

    steps:
      - name: Checkout code
        uses: actions/checkout@v2

      - name: Set up Python
        uses: actions/setup-python@v2
        with:
          python-version: ${{ matrix.python-version }}

      - name: Install dependencies
        run: |
          python -m pip install --upgrade pip
          pip install -r dev-requirements.txt
          python setup.py install

      - name: Run tests
        run: pytest -vv