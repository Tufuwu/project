name: "Tests"

on: [push, pull_request]

jobs:

  build:

    name: "Run tests"
    runs-on: ubuntu-latest

    steps:

      - name: "Checkout the repository"
        uses: actions/checkout@v3

      - name: "Set up Node 18"
        uses: actions/setup-node@v3
        with:
          node-version: 18

      - name: "Install Node dependencies"
        run: |
          npm install

      - name: "Run lint and tests"
        run: |
          npx grunt test

