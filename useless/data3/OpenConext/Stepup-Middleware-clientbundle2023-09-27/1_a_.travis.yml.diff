language: php

php:
  - 7.2
  - 7.4
  - 8.0

jobs:
  allow_failures:
    - php: 8.0

env:
  global:
    - COMPOSER_MEMORY_LIMIT=-1

cache:
  directories:
    - ~/.composer/cache/files/

before_script:
  - phpenv config-add .travis.php.ini
  - composer self-update
  - if [[ ${TRAVIS_PHP_VERSION:0:3} == "5.6" ]]; then composer require mockery/mockery ^0.9; fi;
  - composer install --prefer-dist

script:
  - ant

branches:
  only:
    - master
    - develop

dist: bionic

addons:
  apt:
    packages:
      - ant
