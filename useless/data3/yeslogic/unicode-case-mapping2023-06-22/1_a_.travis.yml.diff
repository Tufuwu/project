language: rust

rust:
  - nightly
  - beta
  - stable
  - 1.38.0

jobs:
  allow_failures:
    - rust: nightly

before_script:
  - rustup component add rustfmt

script:
  - cargo fmt -- --check
  - cargo test
  - |
    if [ "$TRAVIS_RUST_VERSION" = "nightly" ]; then
      cargo bench
    else
      true
    fi

