name: Node.js CI

on:
  push:
    branches:
      - main
      - 'develop'  # 你可以根据需要修改触发条件
  pull_request:
    branches:
      - main
      - 'develop'  # 你可以根据需要修改触发条件

jobs:
  build:
    runs-on: ubuntu-latest  # 选择运行的操作系统

    steps:
      - name: Check out the repository
        uses: actions/checkout@v3

      - name: Set up Node.js
        uses: actions/setup-node@v3
        with:
          node-version: '18'  # 选择 Node.js 版本

      - name: Install dependencies
        run: npm install

      - name: Run documentation generation
        run: npm run docs

      - name: Run validation
        run: npm run validate

      - name: Check if README is up to date
        run: ./check-if-readme-is-up-to-date.sh
