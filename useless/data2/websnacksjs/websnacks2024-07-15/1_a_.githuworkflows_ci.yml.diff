name: CI
on:
    push:
        branches: [mainline]
    pull_request:
        branches: [mainline]

jobs:
    build:
        strategy:
            matrix:
                os: [windows-latest, ubuntu-latest, macos-latest]
                node: [18, 20, 22]
        runs-on: ${{ matrix.os }}
        steps:
            - uses: actions/checkout@v4
            - uses: actions/setup-node@v4
              with:
                  node-version: ${{ matrix.node }}
            - run: npm ci
            - run: npm run build
            - run: npm test
